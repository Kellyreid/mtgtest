<p id="notice"><%= notice %></p>

<h1>Listing Cards</h1>

<div class='well'>These are gameplay objects, not assets.  They are keyed by an English card name</div>
<%= link_to 'Add New Card', new_metacard_path, :class=>'btn btn-success' %>

<table id='metacards'>
  <thead>
    <tr>
        <th>&nbsp</th>
      <th>Name</th>
      <th>Rules text</th>
      <th>Mana cost</th>
      <th>CMC</th>
      <th>Power</th>
      <th>Tgh</th>
      <th>Loyalty</th>
      <th>Types</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metacards.each do |metacard| %>
      <tr>
         <td>
        <%= link_to(image_tag("http://gatherer.wizards.com/Handlers/Image.ashx?type=card&name=#{metacard.name}", :alt => "#{metacard.name}", :title => "#{metacard.name}", :class=>"cardThumb"), metacard) %>
         <!--<img class="cardMedium" src="http://gatherer.wizards.com/Handlers/Image.ashx?type=card&name=<%= metacard.name   %>"></td>-->
        <td><%= metacard.name %></td>
        <td><%= metacard.rules_text %></td>
        <td><%= metacard.mana_cost %></td>
        <td><%= metacard.converted_mana_cost %></td>
        <td><%= metacard.power %></td>
        <td><%= metacard.toughness %></td>
        <td><%= metacard.loyalty %></td>
        <td><%= metacard.type_line %></td>
        <td><%= link_to 'Show', metacard, :class=>'btn btn-primary' %></td>
        <td><%= link_to 'Edit' , edit_metacard_path(metacard), :class=>'btn btn-warning' %></td>
        <td><%= link_to 'Destroy' , metacard, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Metacard', new_metacard_path, :class=>'btn btn-success' %>
<script>
$('#metacards').DataTable();

$('#metacards').addClass('row-border compact middle-text');
    $('#metacards').dataTable(
		{
			jqueryui: true,
			pageLength: 10,
			responsive: true,

		});
</script>
